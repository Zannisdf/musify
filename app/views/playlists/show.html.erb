<h1><%= @playlist.name %> playlist detail</h1>
<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</p>

<h2>Add song:</h2>
<%= form_with(model: [@playlist, @song], local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class:'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class:'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :artist, class:'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :artist, class:'form-control' %>
    </div>
  </div>
  <%= f.submit 'Submit', class:'btn btn-primary' %>
<% end %>

<h2>Current songs:</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td>
          <%= song.name %>
        </td>
        <td>
          <%= song.artist %>
        </td>
        <td>
          <%= link_to 'Delete', playlist_song_path(@playlist, song), method: 'delete', data:{confirm: '¿Está seguro?'}, class:'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 

<%= link_to 'Edit', edit_playlist_path(@playlist), class:'btn btn-info' %> |
<%= link_to 'Back', playlists_path, class:'btn btn-outline-secondary' %>
